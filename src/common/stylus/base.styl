heml,body
  line-height 1
  font-weight 200
  font-family 'PingFang SC', 'STHeitiSC-light', 'Helvetica-Light', Sans-serif

  .clearfix
    display inline-block
    &:after
      display block
      content '.'
      height 0
      line-height 0
      clear both
      visibility hidden


  @media (-webkit-min-device-pixel-ratio 1.5), (min-device-pixel-ratio 1.5)
  .border-1px
    &:after
